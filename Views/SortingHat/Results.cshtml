@model List<Zazzo.ChoresWizard2000.Models.ChoreAssignment>
@{
    ViewData["Title"] = "Sorting Complete!";
}

<div class="results-container">
    <div class="text-center mb-5">
        <h1 class="display-3 result-title">‚ú® The Sorting is Complete! ‚ú®</h1>
        <p class="lead">The Sorting Hat has spoken for @DateTime.Now.ToString("MMMM yyyy")</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var group in Model.GroupBy(a => a.FamilyMember))
            {
                <div class="col-md-6 mb-4">
                    <div class="card member-card shadow-lg">
                        <div class="card-header text-center">
                            <h3>@group.Key?.Name</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h5 class="section-title">üìÖ Daily Chores</h5>
                                <ul class="chore-list">
                                    @foreach (var assignment in group.Where(a => a.Chore?.Frequency == Zazzo.ChoresWizard2000.Models.ChoreFrequency.Daily))
                                    {
                                        <li>
                                            @assignment.Chore?.Name
                                            @if (!string.IsNullOrWhiteSpace(assignment.Chore?.Category))
                                            {
                                                <span class="badge bg-info ms-2">@assignment.Chore.Category</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="mb-3">
                                <h5 class="section-title">üóìÔ∏è Weekly Chores</h5>
                                <ul class="chore-list">
                                    @foreach (var assignment in group.Where(a => a.Chore?.Frequency == Zazzo.ChoresWizard2000.Models.ChoreFrequency.Weekly))
                                    {
                                        <li>
                                            @assignment.Chore?.Name
                                            @if (!string.IsNullOrWhiteSpace(assignment.Chore?.Category))
                                            {
                                                <span class="badge bg-info ms-2">@assignment.Chore.Category</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="mb-3">
                                <h5 class="section-title">üìÜ Bi-Weekly Chores</h5>
                                <ul class="chore-list">
                                    @foreach (var assignment in group.Where(a => a.Chore?.Frequency == Zazzo.ChoresWizard2000.Models.ChoreFrequency.BiWeekly))
                                    {
                                        <li>
                                            @assignment.Chore?.Name
                                            @if (!string.IsNullOrWhiteSpace(assignment.Chore?.Category))
                                            {
                                                <span class="badge bg-info ms-2">@assignment.Chore.Category</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div>
                                <h5 class="section-title">üìÖ Monthly Chores</h5>
                                <ul class="chore-list">
                                    @foreach (var assignment in group.Where(a => a.Chore?.Frequency == Zazzo.ChoresWizard2000.Models.ChoreFrequency.Monthly))
                                    {
                                        <li>
                                            @assignment.Chore?.Name
                                            @if (!string.IsNullOrWhiteSpace(assignment.Chore?.Category))
                                            {
                                                <span class="badge bg-info ms-2">@assignment.Chore.Category</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            üè† Return to Home
        </a>
    </div>
</div>

<style>
    .results-container {
        padding: 40px 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 80vh;
        border-radius: 15px;
    }

    .result-title {
        font-family: 'Georgia', serif;
        color: #8b4513;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        animation: slideIn 1s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .member-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s;
        animation: cardAppear 0.5s ease-out backwards;
    }

    .member-card:nth-child(1) { animation-delay: 0.1s; }
    .member-card:nth-child(2) { animation-delay: 0.2s; }
    .member-card:nth-child(3) { animation-delay: 0.3s; }
    .member-card:nth-child(4) { animation-delay: 0.4s; }
    .member-card:nth-child(5) { animation-delay: 0.5s; }

    @@keyframes cardAppear {
        from {
            opacity: 0;
            transform: scale(0.8) translateY(20px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    .member-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2) !important;
    }

    .member-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        font-weight: bold;
    }

    .section-title {
        color: #667eea;
        font-weight: bold;
        margin-top: 15px;
        border-bottom: 2px solid #667eea;
        padding-bottom: 5px;
    }

    .chore-list {
        list-style: none;
        padding-left: 0;
    }

    .chore-list li {
        padding: 10px;
        margin: 5px 0;
        background: #f8f9fa;
        border-left: 4px solid #667eea;
        border-radius: 5px;
        transition: all 0.2s;
    }

    .chore-list li:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px 40px;
        font-size: 1.2em;
        transition: transform 0.3s;
    }

    .btn-primary:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
</style>