@model Zazzo.ChoresWizard2000.Models.FamilyMember
@{
    ViewData["Title"] = "Edit Family Member";
}

<h2>Edit Family Member</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-check">
        <input asp-for="IsParent" class="form-check-input" />
        <label asp-for="IsParent" class="form-check-label">Is Parent</label>
    </div>
    <div class="form-check">
        <input asp-for="IsTeen" class="form-check-input" />
        <label asp-for="IsTeen" class="form-check-label">Is Teen</label>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>