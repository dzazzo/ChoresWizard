@model Zazzo.ChoresWizard2000.Models.Chore
@{
    ViewData["Title"] = "Edit Chore";
}

<h2>Edit Chore</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" placeholder="e.g., Cat Care, Kitchen, Bathroom" />
        <small class="form-text text-muted">Optional: Group related chores to prevent one person from getting too many from the same category</small>
    </div>
    <div class="form-group">
        <label asp-for="Frequency"></label>
        <select asp-for="Frequency" class="form-control" asp-items="Html.GetEnumSelectList<Zazzo.ChoresWizard2000.Models.ChoreFrequency>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="AgeRestriction"></label>
        <select asp-for="AgeRestriction" class="form-control" asp-items="Html.GetEnumSelectList<Zazzo.ChoresWizard2000.Models.AgeRestriction>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="PinnedToFamilyMemberId">ðŸ“Œ Pin to Family Member</label>
        <select asp-for="PinnedToFamilyMemberId" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewBag.FamilyMembers)"></select>
        <small class="form-text text-muted">Optional: Always assign this chore to a specific person during the Sorting Ceremony</small>
    </div>
    <div class="form-group">
        <label asp-for="AssignToGroup">ðŸ‘¥ Assign to Group</label>
        <select asp-for="AssignToGroup" class="form-control" asp-items="Html.GetEnumSelectList<Zazzo.ChoresWizard2000.Models.AssignToGroup>()"></select>
        <small class="form-text text-muted">Assign this chore to ALL members of a group (e.g., "Clean Your Room" for all kids)</small>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>